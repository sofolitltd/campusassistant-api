@baseUrl = http://localhost:8080/api/v1

### 1. Universities
# @name createUniversity
POST {{baseUrl}}/universities
Content-Type: application/json

{
    "name": "University of Dhaka",
    "acronym": "DU",
    "address": "Dhaka, Bangladesh",
    "website": "https://du.ac.bd"
}
# {
#     "name": "University of Chittagong",
#     "acronym": "CU",
#     "address": "Chittagong, Bangladesh",
#     "website": "https://cu.ac.bd"
# }

### Get All Universities
GET {{baseUrl}}/universities

### Get University by ID
@universityId = {{createUniversity.response.body.id}}
GET {{baseUrl}}/universities/{{universityId}}

### 2. Departments
# @name createDepartment
POST {{baseUrl}}/departments
Content-Type: application/json

{
    "name": "Computer Science and Engineering",
    "code": "CSE",
    "university_id": "{{universityId}}",
    "semesters": 8
}

### Get All Departments
GET {{baseUrl}}/departments

### Get Departments filtered by University
GET {{baseUrl}}/departments?university_id={{universityId}}

### 3. Sessions
# @name createSession
POST {{baseUrl}}/sessions
Content-Type: application/json

{
    "name": "2023-24",
    "university_id": "{{universityId}}",
    "is_active": true
}

### 4. Batches
@departmentId = {{createDepartment.response.body.id}}
@sessionId = {{createSession.response.body.id}}

# @name createBatch
POST {{baseUrl}}/batches
Content-Type: application/json

{
    "name": "CSE 25th Batch",
    "department_id": "{{departmentId}}",
    "session_id": "{{sessionId}}"
}

